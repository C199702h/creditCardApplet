.item-input {
  display: block;
  padding-left: 0;
  height: 35px;
  color: #221715;
  font-size: 14px;
  font-family: UICTFontTextStyleBody;
  line-height: 16px;
  width: 100%;
  text-align: right;
}

.item-textarea {
  display: block;
  padding-left: 0;
  height: 35px;
  color: #221715;
  font-size: 14px;
  font-family: UICTFontTextStyleBody;
  line-height: 20px;
  width: 100%;
  text-align: right;
}

.item-area {
  display: block;
  padding-left: 0;
  min-height: 20px;
  color: #111;
  font-size: 14px;
  width: 100%;
  margin: 6.5px 0 6.5px 0;
}

.item-picker {
  font-size: 14px;
  border: none;
  background: white;
  color: #333;
  vertical-align: middle;
  padding-top: 7px;
  width: 100%;
}

.item-note {
  color: #aaa;
  font-size: 14px;
}

.arrow_down {
  /*display: inline;*/
  float: right;
  position: relative;
  bottom: 12px;
}

.arrow_down:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #888;
  border-style: solid;
  transform: rotate(-45deg);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.arrow_right {
  padding-right: 26rpx;
  position: relative;
}

.arrow_right:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.ui-button-content {
  margin: 20px 22px;
  background-color: transparent;
}

.btn-area{
  padding-top: 20px;
  padding-bottom: 20px;
  background-color: #f5f5f5;
}
.btn {
  width: 89.4% !important;
  height: 40px;
  background-color: #FCC800 !important;
  font-family: PingFangSC-Medium;
  font-size: 14px !important;
  color: #221715 !important;
  letter-spacing: 0.47px;
