.step-title-box{
  width:100%;
  height:70px;
  line-height:70px;
  background: #FFFFFF;
  margin-bottom: 1px;
}
.step-img{
  width: 100%;
  height: 100%;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.mask-grey{
  background: rgba(0,0,0,0.40);
}